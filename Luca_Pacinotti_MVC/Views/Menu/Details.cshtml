@model MenuViewModel
<h1> Ecco i dettagli del menu @Model.IdMenu - @Model.Nome :</h1>

<p>Di Seguito l'elenco dei piatti</p>

<table class="table table-hover table-bordered table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Piatto)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Costo</td>
                <th>
                    <a asp-controller="Piatto" asp-action="Details" asp-route-id="@item.IdPiatto" class="btn btn-primary">Visualizza Dettagli</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Piatto.Count</th>
            <th></th>
        </tr>
    </tfoot>
</table>
