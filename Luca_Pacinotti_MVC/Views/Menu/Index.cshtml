@model ICollection<MenuViewModel>
<h1>Ecco la lista dei Corsi</h1>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>nome</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.IdMenu</td>
                <td>@item.Nome</td>
                <td> 
                   <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.IdMenu" class="btn btn-primary">Visualizza dettagli</a>
                   <a asp-controller="Menu" asp-action="Edit" asp-route-id="@item.IdMenu" class="btn btn-primary">Modifica</a>
                   <a asp-controller="Menu" asp-action="Delete" asp-route-id="@item.IdMenu" class="btn btn-danger">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Totale</th>
            <th>@Model.Count</th>
            <th></th>
        </tr>
    </tfoot>
</table>